<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/emergencyimage"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:srcCompat="@drawable/emergencybutton" />

    <TextView
        android:id="@+id/emergency_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="10dp"
        android:textStyle="bold"
        android:textSize="15dp"
        android:gravity="center"
        android:text=" 긴급탈출 시 손님의 기록이 떨어질 수 있습니다. \n또한 같이 타고 있는 탑승객도 같이 탈출하게 됩니다. " />

    <TextView
        android:id="@+id/emergency_reask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="10dp"
        android:text="그래도 탈출 하시겠습니까?"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:textStyle="bold" />
</LinearLayout>