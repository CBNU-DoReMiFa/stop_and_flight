        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6" />

    <TextView
        android:id="@+id/textView5"
        style="@style/Text.BasicStyle"
        android:layout_width="301dp"
        android:layout_height="171dp"
